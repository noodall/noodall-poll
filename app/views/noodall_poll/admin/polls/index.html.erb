<h1>Manage Polls</h1>

<%= link_to('Create new poll', new_admin_poll_url) %>

<% unless @polls.blank? %>
<table>
  <tr>
    <th>Name</th>
    <th>Question</th>
    <th>Button Label</th>
    <th>Thank you message</th>
    <th>Actions</th>
  </tr>
<%   for poll in @polls %>
  <tr>
    <td><%= poll.name -%></td>
    <td><%= poll.question -%></td>
    <td><%= poll.button_label -%></td>
    <td><%= poll.thank_you_message -%></td>
    <td><%= link_to('Show', admin_poll_path(poll)) %></td>
    <td><%= link_to('Edit', edit_admin_poll_path(poll)) %></td>
    <td><%= link_to('Delete', admin_poll_path(poll), :confirm => 'Are you sure?', :method => :delete) %></td>
  </tr>
<%   end %>
</table>
<% else %>
<h2>No polls found</h2>
<p>There are no polls</p>
<% end %>

